---
import NavigationSection from "@/components/sections/NavigationSection.astro";
import Layout from "@/layouts/Layout.astro";
import { Button } from "@/ui/Button";
import Link from "@/ui/Link.astro";
import { ExternalLink } from "lucide-astro";
---

<Layout title='Navigation' description='Auf dem Campus zurechtfinden'>
  <div class='max-w-screen-2xl mx-auto px-2'>
    <div class='py-8 px-2'>
      <h1 class='text-2xl md:text-5xl font-semibold'>
        Campus <span class='text-primary font-bold'>Navigator</span>
      </h1>
      <h2>Finde dich auf dem Campus zurecht!</h2>
    </div>

    <Link
      href='https://www.uni-ulm.de/einrichtungen/kiz/weiteres/campus-navigation/hoersaalfinder/'
      external
    >
      <Button variant='secondary'>
        Hörsaalfinder
        <ExternalLink class='w-4 h-4 hidden md:inline-block' />
      </Button>
    </Link>
    <p class='text-sm text-muted-foreground mt-1'>
      <span>Für eine genauere Zurechtfindung existiert der </span>
      <Link
        href='https://www.uni-ulm.de/einrichtungen/kiz/weiteres/campus-navigation/campus-navigator/'
        external
        variant='underline'
      >
        Campusnavigator
      </Link>
    </p>
  </div>

  <NavigationSection />
</Layout>
