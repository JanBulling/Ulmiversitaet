---
import Link from "@/ui/Link.astro";
import { Card, CardContent } from "../cards/Card";
import { Button } from "@/ui/Button";
import { ExternalLink } from "lucide-astro";
---

<section class='mt-16 max-w-screen-2xl mx-auto md:px-2'>
  <Link href='/navigation' class='inline-block'>
    <h2
      class='flex items-center gap-4 text-xl px-2 md:px-0 md:text-3xl font-semibold text-foreground w-fit group hover:underline'
    >
      Campus Navigation
      <svg
        xmlns='http://www.w3.org/2000/svg'
        width='24'
        height='24'
        viewBox='0 0 24 24'
        fill='none'
        stroke-width='2.5'
        stroke-linecap='round'
        stroke-linejoin='round'
        class='stroke-current group-hover:stroke-black group-hover:dark:stroke-white'
      >
        <line
          x1='5'
          y1='12'
          x2='19'
          y2='12'
          class='scale-x-0 group-hover:scale-x-100 translate-x-4 group-hover:translate-x-1 transition-all duration-300 ease-in-out'
        ></line>
        <polyline
          points='12 5 19 12 12 19'
          class='translate-x-0 group-hover:translate-x-1 transition-all duration-300 ease-in-out'
        ></polyline>
      </svg>
    </h2>
  </Link>

  <Card className='w-full mt-4 border-y md:border border-x-0'>
    <CardContent className='p-0 flex flex-col md:flex-row'>
      <img
        src='/img/uni-map.png'
        class='w-full max-h-48 md:max-h-none object-cover md:w-1/3 md:max-w-md dark:invert border-r border-border'
      />
      <div class='flex-1 px-4 py-6'>
        <h3 class='font-semibold text-xl'>Angebote der Universität</h3>
        <div class='space-y-4 mt-2'>
          <div>
            <Link
              href='https://www.uni-ulm.de/einrichtungen/kiz/weiteres/campus-navigation/hoersaalfinder/'
              external
            >
              <Button variant='secondary'>
                Hörsaalfinder
                <ExternalLink class='w-4 h-4 hidden md:inline-block' />
              </Button>
            </Link>
            <p class='text-sm text-muted-foreground'>
              Für eine genauere Zurechtfindung existiert der offizielle <Link
                href='https://www.uni-ulm.de/einrichtungen/kiz/weiteres/campus-navigation/campus-navigator/'
                external>Campus Navigator</Link
              >
            </p>
          </div>

          <div>
            <Link
              href='https://www.uni-ulm.de/fileadmin/website_uni_ulm/schulung/screenshots/Anmeldeformular/merkblatt_parken.pdf'
              external
            >
              <Button variant='secondary'>
                Parkautomaten
                <ExternalLink class='w-4 h-4 hidden md:inline-block' />
              </Button>
            </Link>
          </div>
        </div>

        <h3 class='font-semibold text-xl mt-6'>Unser Angebot</h3>
        <div class='mt-2'>
          <Link href='/navigation'>
            <Button variant='success'> Navigator der Ulmiversität </Button>
          </Link>
        </div>
      </div>
    </CardContent>
  </Card>
</section>
