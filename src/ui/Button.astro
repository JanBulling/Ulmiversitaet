---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";

const button = cva(
  "inline-flex gap-2 items-center justify-center rounded-md text-sm font-medium transition-all disabled:pointer-events-none disabled:opacity-50",
  {
    variants: {
      variant: {
        primary: "bg-slate-800 text-slate-100",
        outline:
          "border border-neutral-500 dark:border-neutral-400 shadow-sm bg-transparent",
        ghost:
          "hover:bg-neutral-100 dark:hover:bg-neutral-800 hover:text-neutral-900 dark:hover:text-neutral-100",
      },
      size: {
        sm: "h-9 px-2 py-1",
        md: "h-10 px-4 py-2",
        lg: "h-11 px-8 py-2",
        icon: "h-10 w-10 p-1",
      },
    },
  }
);

export interface Props
  extends HTMLAttributes<"button">,
    VariantProps<typeof button> {}

const {
  class: className,
  variant = "primary",
  size = "md",
  ...props
} = Astro.props;
---

<button class={button({ variant, size, className })} {...props}>
  <slot />
</button>
